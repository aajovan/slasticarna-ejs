<% include ../partials/header %>
<div class="container">
    <h2 class="text-center pb-3 text-brown">Unos novog kolača</h2>
    <div class="border bg-light rounded p-3">
                    <form action="/kolaci" method="POST">
                                    <div class="form-group">
                                      <label for="naziv">Naziv marke</label>
                                      <input type="text" class="form-control" id="naziv" name="kolac[naziv]" placeholder="Unesite naziv kolača" required>
                                    </div>
                                    <div class="form-group">
                                      <label for="slika">Slika</label>
                                      <input type="text" class="form-control" id="slika" name="kolac[slika]" placeholder="Unesite URL slike" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="cijena">Cijena</label>
                                        <input type="number" class="form-control" id="cijena" name="kolac[cijena]" placeholder="Unesite cijenu" required>
                                      </div>
                                    <div class="form-group">
                                        <label for="opis">Opis</label>
                                        <div>
                                            <textarea class="w-100 rounded" name="kolac[opis]" rows="10" id="opis"></textarea>
                                        </div>
                                      </div>
                                    
                                    <button type="submit" class="btn btn-primary">Unesi</button>
                                  </form>
        </div>
</div>

<% include ../partials/footer %>